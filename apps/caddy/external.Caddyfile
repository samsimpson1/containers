{
  acme_dns cloudflare {env.CERT_MANAGER_CLOUDFLARE_PASSWORD}
  email acme@sams.wtf
  acme_ca https://acme-v02.api.letsencrypt.org/directory
  storage file_system /data
  http_port 6996
  https_port 6997
  debug
}

*.srv.simpson.id {
  @rss host rss.srv.simpson.id
  handle @rss {
    reverse_proxy http://freshrss:80
  }

  @sharex host sharex.srv.simpson.id
  handle @sharex {
    root * /sharex
    file_server
  }
}

sams.wtf {
  respond "Nope"
}